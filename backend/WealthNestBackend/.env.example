# Server Configuration
PORT=3001
NODE_ENV=production

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Razorpay Configuration (Optional - for payments)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Email Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
SMTP_FROM=noreply@wealthnest.com

# Finnhub API (Optional - for market news)
FINNHUB_API_KEY=your_finnhub_api_key

# Database URL (Optional - for direct PostgreSQL connection)
DATABASE_URL=postgresql://user:password@host:port/database

# .NET Admin API URL (Optional)
DOTNET_ADMIN_URL=http://localhost:5001

# Price Update Interval (Optional - default: 2 hours)
UPDATE_INTERVAL_HOURS=2
